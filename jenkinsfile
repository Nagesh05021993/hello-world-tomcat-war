pipeline{
    agent any
    
    environment{
        PATH = "/opt/apache-maven-3.9.9/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'Password', url: 'https://github.com/Nagesh05021993/hello-world-tomcat-war.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
            }
        }
      stage("deployment"){
            steps{
                //sshagent(['deply_user']) {

                 //scp webapp/target/webapp.war ubuntu@54.242.80.51:/opt/tomcat9/webapp
                }
            }
        }
    }
}
